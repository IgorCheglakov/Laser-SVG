{
  "name": "laser-svg-editor",
  "version": "0.1.0",
  "description": "Desktop SVG editor for laser engraving with Lightburn compatibility",
  "main": "dist-electron/main/main.cjs",
  "author": "LaserSVG Team",
  "license": "MIT",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "npm run build:electron && electron-vite dev",
    "build": "npm run build:react && npm run build:electron",
    "build:react": "tsc && vite build",
    "build:electron": "tsc -p electron/tsconfig.json",
    "preview": "vite preview",
    "electron": "electron .",
    "electron:dev": "electron-vite dev",
    "electron:build": "electron-vite build",
    "electron:preview": "electron-vite preview",
    "dist": "electron-builder",
    "dist:portable": "electron-builder --win portable",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "zustand": "^4.4.7",
    "lucide-react": "^0.294.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.4",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "electron-vite": "^2.0.0",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "vite-plugin-electron": "^0.28.0",
    "vite-plugin-electron-renderer": "^0.14.5",
    "vitest": "^1.0.0"
  },
  "build": {
    "appId": "com.lasersvg.editor",
    "productName": "LaserSVG Editor",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ]
    },
    "portable": {
      "artifactName": "LaserSVG-Editor-${version}.exe"
    }
  }
}
